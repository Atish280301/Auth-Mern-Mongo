{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**/*"]
      }
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    },
    {
      "src": "/",
      "dest": "dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    },
    {
      "src": "api/auth/signup",
      "dest": "dist/index.html"
    },
    {
      "src": "api/auth/signin",
      "dest": "dist/index.html"
    },
    {
      "src": "/admin",
      "dest": "dist/index.html"
    },
    {
      "src": "/public",
      "dest": "dist/index.html"
    }
  ]
}