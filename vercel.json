{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/index.html"
      }
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/",
      "dest": "dist/index.html"
    },
    {
      "src": "/signup",
      "dest": "dist/index.html"
    },
    {
      "src": "/signin",
      "dest": "dist/index.html"
    },
    {
      "src": "/public",
      "dest": "dist/index.html"
    },
    {
      "src": "/admin",
      "dest": "dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
